<title>Painel do Administrador</title>

<style>
	* {
		overflow: hidden;
	}

	body {
		width: 100%;
		background-color: #d9d9d9;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	form {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	form input {
		width: 80%;
		padding: 0.4rem 1.5rem;
		margin-bottom: 1rem;
		border-radius: 5px;
		font-size: 2rem;
		border: 2px solid #844b99;
		outline: none;
	}

	form button {
		width: 80%;
		padding: 0.4rem 1rem;
		border-radius: 2rem;
		color: #ffffff;
		border: none;
		font-size: 2rem;
		background-color: #844b99;
	}

	@media screen and (min-width: 1000px) {
		form {
			width: auto;
		}

		form input {
			width: auto;
			padding: 0.4rem 1.5rem;
			font-size: 1rem;
		}

		form button {
			width: 100%;
			padding: 0.4rem 1rem;
			font-size: 1rem;
		}
	}
</style>

<body>
	<form method="post" action="/admin">
		<input type="password" name="senha" placeholder="Senha">
		<button type="submit">Enviar</button>
	</form>
</body>